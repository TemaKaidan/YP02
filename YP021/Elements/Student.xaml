<UserControl x:Class="YP021.Elements.Student"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YP021.Elements"
             mc:Ignorable="d">

    <Grid Background="#0060AC" Margin="10" Opacity="10">
        <Grid.Resources>
            <ResourceDictionary Source="/Resource/BtnRes.xaml"/>
        </Grid.Resources>
        <StackPanel>
            <Label Foreground="White" x:Name="surname" Content="Фамилия" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Bold" FontSize="14"/>
            <Label Foreground="White" x:Name="name" Content="Имя" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Bold" FontSize="14"/>
            <Label Foreground="White" x:Name="lastname" Content="Отчество" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Bold" FontSize="14"/>
            <Label Foreground="White" x:Name="studentGroupId" Content="Группа" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Bold" FontSize="14"/>
            <Label Foreground="White" x:Name="dateOfRemand" Content="Дата отчисления" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Bold" FontSize="14"/>

            <Button Style="{StaticResource BtnRedac}" Click="editButton_Click" x:Name="editButton" Content="Изменить" FontWeight="Bold" Foreground="White" BorderBrush="White" FontSize="16" Background="#FFD24B4B" Margin="5" VerticalAlignment="Top" Height="35"
        Width="110" HorizontalAlignment="Left"/>
            <Button Style="{StaticResource BtnRedac}" Click="DeleteStudent_Click" x:Name="deleteButton" Content="Удалить" FontWeight="Bold" Foreground="White" BorderBrush="White" FontSize="16" Background="#FFD24B4B" Margin="5" VerticalAlignment="Top" Height="35"
        Width="110" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</UserControl>
